<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/border_180">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/border_120"
        android:layout_height="@dimen/border_120"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/border_22"
        android:layout_marginStart="@dimen/border_22"
        android:layout_marginTop="@dimen/border_28"
        app:srcCompat="@mipmap/amap_man" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/border_14"
        android:layout_marginTop="@dimen/border_50"
        android:layout_toRightOf="@+id/iv_icon"
        android:text="TextView"
        android:textColor="@color/color_33"
        android:textSize="@dimen/font_32" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_name"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="@dimen/border_20"
        android:layout_toEndOf="@+id/tv_name"
        android:layout_toRightOf="@+id/tv_name"
        android:text="TextView"
        android:textColor="@color/color_99"
        android:textSize="@dimen/font_30" />

    <ImageView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_alignStart="@+id/tv_name"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/border_22"
        android:src="@mipmap/grab_single_location" />

    <TextView
        android:id="@+id/tv_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginLeft="@dimen/border_10"
        android:layout_marginStart="@dimen/border_10"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toLeftOf="@+id/tv_grab_single"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toStartOf="@+id/tv_grab_single"
        android:text="TextView"
        android:textColor="@color/color_66"
        android:textSize="@dimen/font_32" />

    <TextView
        android:id="@+id/tv_grab_single"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/border_60"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/border_28"
        android:layout_marginRight="@dimen/border_28"
        android:layout_marginTop="@dimen/border_64"
        android:background="@mipmap/grab_single"
        android:gravity="center"
        android:text="抢单"
        android:textColor="@color/color_44"
        android:textSize="@dimen/font_30" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/border_20"
        android:layout_marginRight="@dimen/border_20"
        android:background="@color/aam_item_border" />

</RelativeLayout>