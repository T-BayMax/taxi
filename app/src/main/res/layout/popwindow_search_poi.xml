<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_120"
        android:layout_marginBottom="@dimen/border_10"
        android:background="@android:color/white">

        <EditText
            android:id="@+id/et_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableRight="@mipmap/pull_down"
            android:drawablePadding="@dimen/border_10"
            android:focusable="false"
            android:layout_margin="@dimen/border_10"
            android:padding="@dimen/border_10" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/border_10"
            android:padding="@dimen/border_20"
            android:text="取消"
            android:textColor="@color/color_33"
            android:textSize="@dimen/font_30" />

        <AutoCompleteTextView
            android:id="@+id/et_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/border_10"
            android:layout_toEndOf="@+id/et_city"
            android:layout_toLeftOf="@+id/tv_cancel"
            android:layout_toRightOf="@+id/et_city"
            android:layout_toStartOf="@+id/tv_cancel"
            android:background="@color/aam_item_border"
            android:hint="Name"
            android:imeOptions="actionDone"
            android:inputType="text|textAutoComplete"
            android:padding="@dimen/border_30"
            android:textColor="@color/color_33"
            android:textColorHint="@color/color_66"
            android:textSize="@dimen/font_30" />


    </RelativeLayout>

    <ListView
        android:id="@+id/lv_poi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/border_20"
        android:background="@android:color/white">

    </ListView>
</LinearLayout>