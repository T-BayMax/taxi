<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/border_20">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/border_18"
        android:layout_marginTop="@dimen/border_30"
        android:text="已接单"
        android:textColor="@color/color_99"
        android:textSize="@dimen/font_26" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/border_18"
        app:srcCompat="@mipmap/close" />

    <View
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iv_close"
        android:background="@color/aam_item_border"
        android:layout_marginBottom="@dimen/border_20"
        android:layout_marginLeft="@dimen/border_18"
        android:layout_marginRight="@dimen/border_18" />

    <ImageView
        android:id="@+id/iv_driver_icon"
        android:layout_width="@dimen/border_130"
        android:layout_height="@dimen/border_130"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="@dimen/border_18"
        app:srcCompat="@mipmap/amap_man" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="@dimen/border_20"
        android:layout_marginStart="@dimen/border_20"
        android:layout_toEndOf="@+id/iv_driver_icon"
        android:layout_toRightOf="@+id/iv_driver_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/border_16"
            android:text="司机"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_28" />

        <TextView
            android:id="@+id/tv_driving_years"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/border_16"
            android:text="驾龄"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_28" />

        <TextView
            android:id="@+id/tv_plate_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/border_16"
            android:text="车牌号"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_28" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电话"
            android:autoLink="phone"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_28" />
    </LinearLayout>


</RelativeLayout>