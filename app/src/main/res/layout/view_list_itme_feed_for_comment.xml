<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/border_20"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="@dimen/border_50">


    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/border_88"
            android:layout_height="@dimen/border_88"
            android:layout_marginRight="@dimen/border_20"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            app:srcCompat="@mipmap/amap_man" />
        <TextView
            android:id="@+id/tv_user_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_marginRight="@dimen/border_60"
            android:textColor="@color/color_33"
            android:textSize="@dimen/font_32" />

        <com.ike.sq.taxi.view.RatingBar
            android:id="@+id/rb_starNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:starCount="5"
            app:starEmpty="@mipmap/star_grey"
            app:starFill="@mipmap/star_yellow"
            app:starImageSize="@dimen/border_50"
            app:starPadding="@dimen/border_10"
            app:starStep="0"
            app:stepSize="Half" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_title"
        android:layout_marginTop="@dimen/border_10"
        android:layout_alignLeft="@+id/ll_title"
        android:layout_alignBottom="@+id/ll_title"
        android:text="评论内容"
        android:textColor="@color/color_66"
        android:textSize="@dimen/font_26" />


</LinearLayout>